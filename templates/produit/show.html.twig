<script>
    document.addEventListener('DOMContentLoaded', (event) => {
        // Get the elements
        const minusButton = document.querySelector('.quantity-left-minus');
        const plusButton = document.querySelector('.quantity-right-plus');
        const quantityInput = document.getElementById('quantity');
        const quantityFormInput = document.getElementById('quantity_form');

        // Add event listeners
        minusButton.addEventListener('click', () => {
            let currentValue = parseInt(quantityInput.value);
            if (currentValue > parseInt(quantityInput.min)) {
                quantityInput.value = currentValue - 1;
                quantityFormInput.value = quantityInput.value;
            }
        });

        plusButton.addEventListener('click', () => {
            let currentValue = parseInt(quantityInput.value);
            if (currentValue < parseInt(quantityInput.max)) {
                quantityInput.value = currentValue + 1;
                quantityFormInput.value = quantityInput.value;
            }
        });

        quantityInput.addEventListener('change', () => {
            quantityFormInput.value = quantityInput.value;
        });
    });
</script>
